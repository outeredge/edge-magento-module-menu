<?xml version="1.0" encoding="UTF-8"?>
<layout>

    <adminhtml_menu_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>edge/menu/menu.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>edge/menu/menu.js</name>
            </action>
        </reference>
        <update handle="editor"/>
        <reference name="content">
            <block type="menu/adminhtml_setup" name="adminhtml.menu.setup" template="edge/menu/menu.phtml">
                <block type="menu/adminhtml_catalog_category" name="categories_tree" template="edge/menu/tab/categories.phtml">
                    <action method="setData">
                        <key>title</key>
                        <value>Categories</value>
                    </action>
                </block>
                <block type="menu/adminhtml_catalog_product" name="products_list">
                    <action method="setData">
                        <key>title</key>
                        <value>Products</value>
                    </action>
                </block>
                <block type="menu/adminhtml_cms_page" name="cms_page">
                    <action method="setData">
                        <key>title</key>
                        <value>CMS Pages</value>
                    </action>
                </block>
                <block type="core/template" name="custom_link" template="edge/menu/tab/custom_link.phtml">
                    <action method="setData">
                        <key>title</key>
                        <value>Custom Link</value>
                    </action>
                </block>
            </block>
        </reference>
    </adminhtml_menu_index>

    <adminhtml_menu_productgrid>
        <block type="core/text_list" name="root" output="toHtml">
            <block type="menu/adminhtml_catalog_product_grid" name="admin.product.grid"/>
        </block>
    </adminhtml_menu_productgrid>

</layout>