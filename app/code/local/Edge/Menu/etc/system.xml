<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <edge translate="label" module="menu">
            <label>outer/edge</label>
            <sort_order>200</sort_order>
        </edge>
    </tabs>
    <sections>
        <menu translate="label" module="menu">
            <class>separator-top</class>
            <label>Menu</label>
            <tab>edge</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label" module="menu">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <schema translate="label">
                            <label>Enable Schema.org structured markup</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </schema>
                    </fields>
                </settings>
                <cache translate="label" module="menu">
                    <label>Cache</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <lifetime translate="label">
                            <label>Cache Lifetime</label>
                            <frontend_type>text</frontend_type>
                            <comment><![CDATA[Leave blank to cache forever.]]></comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </lifetime>
                    </fields>
                </cache>
            </groups>
        </menu>
    </sections>
